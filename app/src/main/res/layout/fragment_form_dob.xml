<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/background_create_profile"
    tools:context=".Fragments.FormNameFragment">
    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sf_pro_heavy"
        android:text="@string/what_s_your_date_of_birth"
        android:textSize="@dimen/_30ssp"
        android:textColor="@color/colorTitleBlue"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_60sdp"
        android:layout_marginStart="@dimen/_30sdp"
        android:layout_marginEnd="@dimen/_30sdp"/>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_30sdp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_30sdp"
        android:layout_marginStart="@dimen/_30sdp"
        android:layout_marginEnd="@dimen/_30sdp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_20sdp">
            <NumberPicker
                android:id="@+id/datepicker"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:datePickerMode="spinner"
                android:calendarViewShown="false"
                android:layout_marginEnd="@dimen/_10sdp"/>
            <NumberPicker
                android:id="@+id/monthpicker"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:datePickerMode="spinner"
                android:calendarViewShown="false"
                android:layout_marginStart="@dimen/_10sdp"/>
            <NumberPicker
                android:id="@+id/yearpicker"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:datePickerMode="spinner"
                android:calendarViewShown="false"
                android:layout_marginStart="@dimen/_10sdp"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/_30sdp"
        android:padding="@dimen/_10sdp">
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/age_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="25 years"
            android:textColor="@color/colorTitleBlue"
            android:fontFamily="@font/sf_pro_heavy"
            android:textSize="@dimen/_25ssp"
            android:layout_gravity="center"/>
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This cannot be changed later"
            android:textColor="@color/black"
            android:fontFamily="@font/sf_pro_regular"
            android:layout_gravity="center"
            android:textAllCaps="true"/>
    </LinearLayout>
</LinearLayout>